/** 修改button默认的点击态样式类**/
page{
    /*background-color:#fff;*/
    font-size:30rpx;
    background-color: "{{bc}}";
}
.personalWrap{
  background-color: rgb(101, 114, 94);
  width: 750rpx;
  height: 1500rpx;
}
 
.personalMe{
    height:210rpx;
    margin:30rpx 0rpx 30rpx 0rpx;
}
.personalMe1{
    height:210rpx;
    margin:30rpx 0rpx 30rpx 0rpx;
    background-color: gray;
    color:#ccc;
    }

.personalInfo{
    float:left;
    margin: 20rpx 0rpx 0rpx 20rpx;
}
.personalInfo wx-text{
    display: block;
    line-height:70rpx;
    height:70rpx;
}



.personalList1{

    padding:0rpx 20rpx;

}
.personalList2{
    background-color: gray;
    padding:0rpx 20rpx;
    color: #ccc;
}
.personalList1 view{
    display: block;
    line-height:70rpx;
    height:70rpx;
    border-bottom:1px solid #ddd;
}
.personalList2 view{
    display: block;
    line-height:70rpx;
    height:70rpx;
    border-bottom:1px solid #eee;
}

.personalList1 wx-span{
    float:right;
    font-size:40rpx;
     margin-top:-63rpx;
    color:#ddd;
}
.personalList2 wx-span{
    float:right;
    font-size:40rpx;
     margin-top:-63rpx;
    color:#eee;
}

.personalList1 view{
    position:relative;
}
.personalList2 view{
    position:relative;
}


.iconfont{
    font-size:20px;
}
.personalList1 view:before{
  color:#b02923;
    font-size:20px !important;
    font-weight:bold;
    padding-right: 10rpx;
    text-align:center;
    vertical-align:top;
}

.personalList2 view:before{
  color:#b02923;
    font-size:20px !important;
    font-weight:bold;
    padding-right: 10rpx;
    text-align:center;
    vertical-align:top;
}
.personalList1 view:after{
    content:'';
    height:10px;
    width:10px;
    display:block;
    border:1px solid #ccc;
    border-left-width:0;
    border-bottom-width:0;
      position:absolute;
    top:10px;
    right:6px;
    -webkit-transform:rotate(45deg);
       -moz-transform:rotate(45deg);
            transform:rotate(45deg);
}

.personalList2 view:after{
    content:'';
    height:10px;
    width:10px;
    display:block;
    border:1px solid rgb(70, 52, 52);
    border-left-width:0;
    border-bottom-width:0;
      position:absolute;
    top:10px;
    right:6px;
    -webkit-transform:rotate(45deg);
       -moz-transform:rotate(45deg);
            transform:rotate(45deg);
}

